{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2017",
            "dom"
        ],
        "outDir": "lib",
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "declaration": true,
        "jsx": "react"
    },
    "exclude": [
        "lib",
        "node_modules",
    ],
    "files": [
        "src/main/script/index.ts",
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
